    "siteBgVertical": "",

    // 自定义主题背景图遮罩颜色。
    // 可以如下所示使用 RGBA 格式，或者直接设为 "none"
    "bgMaskColor": {
        "light": "rgba(255, 255, 255, 0.95)", // 日间模式下的遮罩
        "dark": "rgba(0, 0, 0, 0.95)" // 夜间模式下的遮罩
    },

